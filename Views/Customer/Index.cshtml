@using MvcStok.Models.Entity
@model List<tbl_Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
{
<label><b>Aranacak Müşteri Adı:  @Html.TextBox("p")</b></label>
<input type="submit" value="Ara" class="btn btn-info" />
}

<table class="table table-bordered" style="margin-top:1%;">
    
        <tr>
            <th>Müşteri ID</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            
        </tr>
 
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.Customer_ID</td>
            <td>@customer.Customer_Name</td>
            <td>@customer.Customer_Surname</td>
            @*<td><a href="/Customer/DeleteCustomer/@customer.Customer_ID" class="btn btn-danger">Sil</a></td>*@
            <td>@Html.ActionLink("Sil", "DeleteCustomer", new { id = customer.Customer_ID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz? ')" })</td>
            <td><a href="/Customer/CustomerGet/@customer.Customer_ID" class="btn btn-success">Güncelle</a></td>


        </tr>
        }
    </tbody>
</table>
<a href="/Customer/NewCustomer/" class="btn btn-primary">Yeni Müşteri</a>

